@model Gadget_Gourmet.Models.Entities.User

<br />

<span class="display-1 ps-md-2 fw-bold text-uppercase" style="font-family: Noah; font-size:170%; ">
	SignUp
</span>

<form>

	<div class="container mb-3">
		<div class="row">
			<div class="col-md-5 col-12">
				<label for="exampleFormControlInput1" class="form-label" name="UserName">Username</label>
				<input type="text" class="form-control" id="exampleFormControlInput1">
			</div>
		</div>
	</div>


	<div class="container mb-3">
		<div class="row">
			<div class="col-md-5 col-12">
				<label for="exampleFormControlInput1" class="form-label" name="Email">Email address</label>
				<input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
			</div>
		</div>
	</div>

	<div class="container mb-3">
		<div class="row align-content-start">
			<div class="col-md-5 col-12">
				<label for="inputPassword5" class="form-label" name="Password">Password</label>
				<input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
				<div id="passwordHelpBlock" class="form-text">
					Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
				</div>
				<!-- Shop Now Button -->
				<a href="Signup" class="custom-button text-center">Signup</a>
			</div>
		</div>
	</div>




	<br />
	<br />
	<br />



</form>