@model Gadget_Gourmet.Models.Entities.Product

<span class="display-1 mt-2 ps-md-2 fw-bold text-uppercase" style="font-family: Noah; font-size:170%;">
    Add Product
</span>

<form method="post" asp-action="AddProduct">
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label for="exampleFormControlInput1" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="Name" id="exampleFormControlInput1" asp-for="Name">
            </div>
        </div>
    </div>

   

    <div class="container-fluid" style="font-family: Noah">
        <div class="row">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Signup">Don't have Account, Signup here</a>
        </div>
    </div>
</form>

<br />