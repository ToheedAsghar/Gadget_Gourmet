@model Gadget_Gourmet.Models.Entities.Category

<span class="display-1 mt-2 ps-md-2 fw-bold text-uppercase" style="font-family: Noah; font-size:170%;">
	Introduce a New Category
</span>

<div class="mb-5">
	<form class="mt-3" method="post" asp-action="AddCategory">
		<div asp-validation-summary="ModelOnly"></div>

		@* Category Name *@
		<div class="container mb-3">
			<div class="row">
				<div class="col-md-5 col-12">
					<label for="Name" class="form-label">Category Name</label>
					<input type="text" class="form-control" id="Name" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
		</div>

		
		<button type="submit" class="custom-button text-center">Add</button>
	</form>

</div>