@{
    ViewBag.Title = "Search Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" id="searchTerm" class="form-control" placeholder="Search for products..." aria-label="Search for products" aria-describedby="search-button" required>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button" id="search-button">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4" id="searchResults"></div>
</div>

<script src="js/searchbar.js"></script>