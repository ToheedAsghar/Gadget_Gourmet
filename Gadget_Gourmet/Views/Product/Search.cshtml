@model List<Gadget_Gourmet.Models.Entities.Product>

<div class="container mt-4">
    <div class="row">
        @if (Model != null && Model.Any())

        {
            @foreach (var product in Model)

            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm">
                        @* <img class="card-img-top" src="~/images/@product.Image" alt="Product image"> *@
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <h6 class="card-subtitle mb-2 text-muted">Price: $@product.Price</h6>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            @* <a href="AdminController/ViewProduct?id=@product.Id" class="btn btn-primary btn-block">View Product</a> *@
                            <a href="@Url.Action("ViewProduct", "Product", new { id = product.Id })" class="btn btn-primary btn-block">View Product</a>

                        </div>
                    </div>
                </div>
            }
        }

        else

        {
            <p>No products found.</p>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .card-body h5 {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .card-body p {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .btn {
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #1a66d4;
        }
</style>
