@{
    ViewData["Title"] = "Search Products";
}

<div class="container">
    <h2 class="text-center mt-4">Search Results</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="~/path/to/your/image.jpg" class="card-img-top" alt="@product.Name"> <!-- Replace with your image path -->
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>Price: $@product.Price</strong></p>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No products found matching your search criteria.</p>
    }
</div>