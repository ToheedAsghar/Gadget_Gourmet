@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Shopping Cart</h2>

    <div class="cart-items">
        <!-- Example Product 1 -->
        <div class="cart-item row align-items-center mb-4 p-3">
            <div class="col-md-2">
                <img src="/images/sample-product-1.jpg" alt="Product 1" class="img-fluid rounded">
            </div>
            <div class="col-md-4">
                <h5>Product 1 Name</h5>
                <p class="text-muted">Short description of the product.</p>
            </div>
            <div class="col-md-2">
                <span class="text-success font-weight-bold">$49.99</span>
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control quantity-input" value="1" min="1">
            </div>
            <div class="col-md-2 text-right">
                <button class="btn btn-danger btn-sm">Remove</button>
            </div>
        </div>

        <!-- Example Product 2 -->
        <div class="cart-item row align-items-center mb-4 p-3">
            <div class="col-md-2">
                <img src="/images/sample-product-2.jpg" alt="Product 2" class="img-fluid rounded">
            </div>
            <div class="col-md-4">
                <h5>Product 2 Name</h5>
                <p class="text-muted">Short description of the product.</p>
            </div>
            <div class="col-md-2">
                <span class="text-success font-weight-bold">$89.99</span>
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control quantity-input" value="1" min="1">
            </div>
            <div class="col-md-2 text-right">
                <button class="btn btn-danger btn-sm">Remove</button>
            </div>
        </div>

        <!-- Total and Checkout Button -->
        <div class="cart-total text-right">
            <h4>Total: <span class="text-success font-weight-bold">$139.98</span></h4>
            <button class="btn btn-primary btn-lg mt-3">Proceed to Checkout</button>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Noah', sans-serif;
        background-color: #f8f9fa;
    }

    .cart-items {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 700;
        color: #333;
    }

    .cart-item {
        border-bottom: 1px solid #e9ecef;
    }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item img {
            max-width: 100%;
        }

        .cart-item h5 {
            font-weight: 600;
            margin-bottom: 5px;
        }

    .quantity-input {
        width: 70px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .cart-total {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px solid #e9ecef;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>