@model Gadget_Gourmet.Models.Entities.User

<span class="display-1 mt-2 ps-md-2 fw-bold text-uppercase" style="font-family: Noah; font-size:170%;">
    SignUp
</span>

<form method="post" asp-action="Signup">
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label for="exampleFormControlInput1" class="form-label">Username</label>
                <input type="text" class="form-control" name="UserName" id="exampleFormControlInput1" asp-for="UserName">
            </div>
        </div>
    </div>

    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" name="Email" asp-for="Email" placeholder="name@example.com">
            </div>
        </div>
    </div>

    <div class="container mb-3">
        <div class="row align-content-start">
            <div class="col-md-5 col-12">
                <label for="inputPassword5" class="form-label">Password</label>
                <input type="password" id="inputPassword5" class="form-control" name="Password" asp-for="Password" placeholder="use a strong password" aria-describedby="passwordHelpBlock">
                <div id="passwordHelpBlock" class="form-text">
                    Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </div>
                <button type="submit" class="custom-button text-center">Signup</button>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="font-family: Noah">
        <div class="row">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Already have an Account, Login here</a>
        </div>
    </div>
</form>